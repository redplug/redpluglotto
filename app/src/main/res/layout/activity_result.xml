<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline1"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.08"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.92"/>
    <view android:layout_width="0dp" android:layout_height="0dp"
          class="android.support.v7.widget.AppCompatTextView"
          android:id="@+id/resultLabel" app:layout_constraintStart_toStartOf="@+id/guideline3"
          app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="16dp"
          android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
          android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline1"
          android:textSize="60sp" android:text="홍길동님의\n 로또번호입니다." android:maxLines="3" app:autoSizeMaxTextSize="60sp"
          app:autoSizeMinTextSize="16sp" app:autoSizeStepGranularity="1sp" app:autoSizeTextType="uniform"
          android:textAlignment="center"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_01" android:id="@+id/imageView01"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView02"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_02" android:id="@+id/imageView02"
            app:layout_constraintStart_toEndOf="@+id/imageView01" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView03" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_03" android:id="@+id/imageView03"
            app:layout_constraintStart_toEndOf="@+id/imageView02" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView04" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_11" android:id="@+id/imageView04"
            app:layout_constraintStart_toEndOf="@+id/imageView03" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView05" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_21" android:id="@+id/imageView05"
            app:layout_constraintStart_toEndOf="@+id/imageView04" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView06" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ball_31" android:id="@+id/imageView06"
            app:layout_constraintStart_toEndOf="@+id/imageView05" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline1"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/money"
            android:id="@+id/imageView10" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>